  div.timeline-drop(style='display:none;', file-dropzone='[image/png, image/jpeg, image/gif]', file='newEntry.image.file', file-name='newEntry.image.filename', data-max-file-size='3')
    img(ng-src="{{newEntry.image.file || newEntry.image.url}}", style='width:100px;height:100px;')
    .button.add(ng-click="addEntry()", ng-show="newEntry.image.file")
