.animal.cat
  .header
    .cover-container
      img.cover-photo(ng-src="{{animal.coverPhoto.url || '/img/blank_cover.png'}}")
    //- .profile-col
    //- 
    //-   .share
    //-     //- a(href="#")
    //-     //-   img(src="img/share_white.png")
    //- 
